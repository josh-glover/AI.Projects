<Application x:Class="AI.Projects.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AI.Projects.UI"
             xmlns:converters="clr-namespace:AI.Projects.UI.Core.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:Bootstrapper x:Key="Bootstrapper"/>
                </ResourceDictionary>
                
                <!-- Converters -->
                <ResourceDictionary>
                    <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
                </ResourceDictionary>
                
                <!-- Styles -->
                <ResourceDictionary Source="Styles/Color.xaml" />
                <ResourceDictionary Source="Styles/RadioButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
