<Window x:Class="AI.Projects.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AI.Projects.UI.Views"
        mc:Ignorable="d"
        Height="600"
        Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="SideMenu"
                    Orientation="Vertical"
                    Background="{StaticResource ApplicationMainBrush}"
                    Grid.Column="0">
            <RadioButton x:Name="ProjectOne"
                          Content="1"
                          Style="{StaticResource SideMenuRadioButtonStyle}" />
            <RadioButton x:Name="ProjectTwo"
                         Content="2"
                         Style="{StaticResource SideMenuRadioButtonStyle}" />
        </StackPanel>
        
        <ContentControl x:Name="ActiveItem"
                        Grid.Column="1" />
    </Grid>
</Window>
